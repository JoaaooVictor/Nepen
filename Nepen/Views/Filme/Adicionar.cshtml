@model FilmeModel

<h2>Adicionar Filme</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.Titulo)
        @Html.TextBoxFor(model => model.Titulo, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Duracao)
        @Html.TextBoxFor(model => model.Duracao, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Genero)
        @Html.TextBoxFor(model => model.Genero, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Classificacao)
        @Html.TextBoxFor(model => model.Classificacao, new { @class = "form-control" })
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Adicionar Filme</button>
}
